{
	"$schema": "https://json-schema.org/draft/2020-12/schema",
	"$id": "https://veriserve.local/schemas/goal.schema.json",
	"title": "PLN Goal Artifact Schema",
	"type": "object",
	"required": [
		"meta",
		"goal"
	],
	"properties": {
		"meta": {
			"type": "object",
			"required": [
				"artifact_id",
				"file",
				"author",
				"source_type",
				"source",
				"timestamp",
				"content_hash",
				"model"
			],
			"properties": {
				"artifact_id": {
					"type": "string",
					"pattern": "^[A-Z]{2,5}-[A-Z]{2,5}-[A-Z0-9_]+-\\d{3}$"
				},
				"file": {
					"type": "string"
				},
				"author": {
					"type": "string"
				},
				"source_type": {
					"type": "string",
					"enum": [
						"human",
						"ai",
						"mixed"
					]
				},
				"source": {
					"type": "string"
				},
				"timestamp": {
					"type": "string"
				},
				"content_hash": {
					"type": "string",
					"minLength": 1
				},
				"model": {
					"type": "string"
				}
			},
			"additionalProperties": true
		},
		"goal": {
			"type": "object",
			"required": [
				"summary",
				"primary_goal",
				"secondary_goals",
				"success_criteria",
				"scope_in",
				"scope_out",
				"abort_conditions",
				"notes"
			],
			"properties": {
				"summary": {
					"type": "string"
				},
				"primary_goal": {
					"type": "string"
				},
				"secondary_goals": {
					"type": "array",
					"items": {
						"type": "string"
					}
				},
				"success_criteria": {
					"type": "array",
					"items": {
						"type": "object",
						"required": [
							"metric",
							"target",
							"measurement"
						],
						"properties": {
							"metric": {
								"type": "string"
							},
							"target": {
								"type": "string"
							},
							"measurement": {
								"type": "string"
							}
						},
						"additionalProperties": true
					}
				},
				"scope_in": {
					"type": "array",
					"items": {
						"type": "string"
					}
				},
				"scope_out": {
					"type": "array",
					"items": {
						"type": "string"
					}
				},
				"abort_conditions": {
					"type": "array",
					"items": {
						"type": "string"
					}
				},
				"notes": {
					"type": "array",
					"items": {
						"type": "string"
					}
				}
			},
			"additionalProperties": true
		}
	},
	"additionalProperties": true
}