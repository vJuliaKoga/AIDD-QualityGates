{
	"$schema": "https://json-schema.org/draft/2020-12/schema",
	"$id": "https://veriserve.local/schemas/scope.schema.json",
	"title": "PLN Scope Artifact Schema",
	"type": "object",
	"required": [
		"meta",
		"scope"
	],
	"properties": {
		"meta": {
			"type": "object",
			"required": [
				"artifact_id",
				"file",
				"author",
				"source_type",
				"source",
				"timestamp",
				"content_hash",
				"model"
			],
			"properties": {
				"artifact_id": {
					"type": "string",
					"pattern": "^[A-Z]{2,5}-[A-Z]{2,5}-[A-Z0-9_]+-\\d{3}$"
				},
				"file": {
					"type": "string"
				},
				"author": {
					"type": "string"
				},
				"source_type": {
					"type": "string",
					"enum": [
						"human",
						"ai",
						"mixed"
					]
				},
				"source": {
					"type": "string"
				},
				"timestamp": {
					"type": "string"
				},
				"content_hash": {
					"type": "string",
					"minLength": 1
				},
				"model": {
					"type": "string"
				}
			},
			"additionalProperties": true
		},
		"scope": {
			"type": "object",
			"required": [
				"summary",
				"scope_in",
				"scope_out",
				"assumptions",
				"deliverables",
				"abort_conditions",
				"traceability",
				"terminology",
				"qa_from_planning"
			],
			"properties": {
				"summary": {
					"type": "string"
				},
				"scope_in": {
					"type": "array",
					"items": {
						"type": "string"
					}
				},
				"scope_out": {
					"type": "array",
					"items": {
						"type": "string"
					}
				},
				"assumptions": {
					"type": "array",
					"items": {
						"type": "string"
					}
				},
				"abort_conditions": {
					"type": "array",
					"items": {
						"type": "string"
					}
				},
				"deliverables": {
					"type": "array",
					"minItems": 1,
					"items": {
						"type": "object",
						"required": [
							"id",
							"name",
							"acceptance"
						],
						"properties": {
							"id": {
								"type": "string",
								"pattern": "^[A-Z]{2,5}-[A-Z]{2,5}-[A-Z0-9_]+-\\d{3}$"
							},
							"name": {
								"type": "string"
							},
							"acceptance": {
								"type": "array",
								"items": {
									"type": "string"
								}
							}
						},
						"additionalProperties": true
					}
				},
				"traceability": {
					"type": "object",
					"required": [
						"links_out",
						"note"
					],
					"properties": {
						"links_out": {
							"type": "array",
							"items": {
								"type": "object",
								"required": [
									"from",
									"to",
									"relation"
								],
								"properties": {
									"from": {
										"type": "string"
									},
									"to": {
										"type": "string"
									},
									"relation": {
										"type": "string"
									}
								},
								"additionalProperties": true
							}
						},
						"note": {
							"type": "string"
						}
					},
					"additionalProperties": true
				},
				"terminology": {
					"type": "object",
					"required": [
						"glossary",
						"allowed_abbreviations_ref"
					],
					"properties": {
						"glossary": {
							"type": "array",
							"items": {
								"type": "object",
								"required": [
									"term",
									"definition"
								],
								"properties": {
									"term": {
										"type": "string"
									},
									"definition": {
										"type": "string"
									}
								},
								"additionalProperties": true
							}
						},
						"allowed_abbreviations_ref": {
							"type": "array",
							"items": {
								"type": "string"
							}
						}
					},
					"additionalProperties": true
				},
				"qa_from_planning": {
					"type": "object",
					"required": [
						"required_checks"
					],
					"properties": {
						"required_checks": {
							"type": "array",
							"minItems": 1,
							"items": {
								"type": "object",
								"required": [
									"id",
									"title"
								],
								"properties": {
									"id": {
										"type": "string",
										"pattern": "^[A-Z]{2,5}-[A-Z]{2,5}-[A-Z0-9_]+-\\d{3}$"
									},
									"title": {
										"type": "string"
									}
								},
								"additionalProperties": true
							}
						}
					},
					"additionalProperties": true
				}
			},
			"additionalProperties": true
		}
	},
	"additionalProperties": true
}