{
	"$schema": "https://json-schema.org/draft/2020-12/schema",
	"$id": "https://veriserve.local/schemas/inspection_design.schema.json",
	"title": "PLN Inspection Design Schema (Failure Modes â†” Inspection Layers)",
	"type": "object",
	"required": [
		"meta",
		"inspection_design"
	],
	"properties": {
		"meta": {
			"type": "object",
			"required": [
				"artifact_id",
				"file",
				"author",
				"source_type",
				"source",
				"timestamp",
				"content_hash",
				"model"
			],
			"properties": {
				"artifact_id": {
					"type": "string",
					"pattern": "^[A-Z]{2,5}-[A-Z]{2,5}-[A-Z0-9_]+-\\d{3}$"
				},
				"file": {
					"type": "string"
				},
				"author": {
					"type": "string"
				},
				"source_type": {
					"type": "string",
					"enum": [
						"human",
						"ai",
						"mixed"
					]
				},
				"source": {
					"type": "string"
				},
				"timestamp": {
					"type": "string"
				},
				"content_hash": {
					"type": "string",
					"minLength": 1
				},
				"model": {
					"type": "string"
				}
			},
			"additionalProperties": true
		},
		"inspection_design": {
			"type": "object",
			"required": [
				"description",
				"failure_modes",
				"inspection_layers",
				"mappings",
				"notes"
			],
			"properties": {
				"description": {
					"type": "string"
				},
				"failure_modes": {
					"type": "array",
					"minItems": 1,
					"items": {
						"type": "object",
						"required": [
							"id",
							"name",
							"description",
							"examples"
						],
						"properties": {
							"id": {
								"type": "string",
								"minLength": 1
							},
							"name": {
								"type": "string",
								"minLength": 1
							},
							"description": {
								"type": "string"
							},
							"examples": {
								"type": "array",
								"items": {
									"type": "string"
								}
							}
						},
						"additionalProperties": true
					}
				},
				"inspection_layers": {
					"type": "array",
					"minItems": 1,
					"items": {
						"type": "object",
						"required": [
							"id",
							"name",
							"purpose",
							"primary_mechanisms",
							"tools"
						],
						"properties": {
							"id": {
								"type": "string",
								"minLength": 1
							},
							"name": {
								"type": "string",
								"minLength": 1
							},
							"purpose": {
								"type": "string"
							},
							"primary_mechanisms": {
								"type": "array",
								"items": {
									"type": "string"
								}
							},
							"tools": {
								"type": "array",
								"items": {
									"type": "string"
								}
							}
						},
						"additionalProperties": true
					}
				},
				"mappings": {
					"type": "array",
					"minItems": 1,
					"items": {
						"type": "object",
						"required": [
							"failure_mode_id",
							"layer_ids",
							"machine_checks"
						],
						"properties": {
							"failure_mode_id": {
								"type": "string",
								"minLength": 1
							},
							"layer_ids": {
								"type": "array",
								"minItems": 1,
								"items": {
									"type": "string"
								}
							},
							"machine_checks": {
								"type": "array",
								"minItems": 1,
								"items": {
									"type": "object",
									"required": [
										"id",
										"name",
										"input_artifacts",
										"method",
										"pass_criteria",
										"output_artifacts"
									],
									"properties": {
										"id": {
											"type": "string",
											"minLength": 1
										},
										"name": {
											"type": "string",
											"minLength": 1
										},
										"input_artifacts": {
											"type": "array",
											"minItems": 1,
											"items": {
												"type": "string"
											}
										},
										"method": {
											"type": "string"
										},
										"pass_criteria": {
											"type": "string"
										},
										"output_artifacts": {
											"type": "array",
											"minItems": 1,
											"items": {
												"type": "string"
											}
										}
									},
									"additionalProperties": true
								}
							}
						},
						"additionalProperties": true
					}
				},
				"notes": {
					"type": "array",
					"items": {
						"type": "string"
					}
				}
			},
			"additionalProperties": true
		}
	},
	"additionalProperties": true
}