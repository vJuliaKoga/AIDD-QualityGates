{
	"$schema": "https://json-schema.org/draft/2020-12/schema",
	"$id": "https://veriserve.local/schemas/requirements.schema.json",
	"title": "REQ Base Requirements Schema",
	"type": "object",
	"required": [
		"meta",
		"requirements"
	],
	"properties": {
		"meta": {
			"type": "object",
			"required": [
				"artifact_id",
				"file",
				"author",
				"source_type",
				"source",
				"timestamp",
				"content_hash",
				"model"
			],
			"properties": {
				"artifact_id": {
					"type": "string",
					"pattern": "^[A-Z]{2,5}-[A-Z]{2,5}-[A-Z0-9_]+-\\d{3}$"
				},
				"file": {
					"type": "string"
				},
				"author": {
					"type": "string"
				},
				"source_type": {
					"type": "string",
					"enum": [
						"human",
						"ai",
						"mixed"
					]
				},
				"source": {
					"type": "string"
				},
				"timestamp": {
					"type": "string"
				},
				"content_hash": {
					"type": "string",
					"minLength": 1
				},
				"model": {
					"type": "string"
				}
			},
			"additionalProperties": true
		},
		"requirements": {
			"type": "object",
			"required": [
				"functional",
				"non_functional",
				"traceability"
			],
			"properties": {
				"functional": {
					"type": "array",
					"items": {
						"type": "object",
						"required": [
							"id",
							"title",
							"derivedfrom",
							"description",
							"input_artifacts",
							"method",
							"pass_criteria",
							"output_artifacts",
							"priority"
						],
						"properties": {
							"id": {
								"type": "string",
								"pattern": "^REQ-REQ-FNC-\\d{3}$"
							},
							"title": {
								"type": "string"
							},
							"derivedfrom": {
								"type": "array",
								"minItems": 1,
								"items": {
									"type": "string"
								}
							},
							"description": {
								"type": "string"
							},
							"input_artifacts": {
								"type": "array",
								"items": {
									"type": "string"
								}
							},
							"method": {
								"type": "string"
							},
							"pass_criteria": {
								"type": "string"
							},
							"output_artifacts": {
								"type": "array",
								"items": {
									"type": "string"
								}
							},
							"priority": {
								"type": "string",
								"enum": [
									"MUST",
									"SHOULD",
									"COULD"
								]
							}
						},
						"additionalProperties": true
					}
				},
				"non_functional": {
					"type": "array",
					"items": {
						"type": "object",
						"required": [
							"id",
							"title",
							"derivedfrom",
							"description",
							"metric",
							"target",
							"measurement",
							"priority"
						],
						"properties": {
							"id": {
								"type": "string",
								"pattern": "^REQ-REQ-NFR-\\d{3}$"
							},
							"title": {
								"type": "string"
							},
							"derivedfrom": {
								"type": "array",
								"minItems": 1,
								"items": {
									"type": "string"
								}
							},
							"description": {
								"type": "string"
							},
							"metric": {
								"type": "string"
							},
							"target": {
								"type": "string"
							},
							"measurement": {
								"type": "string"
							},
							"priority": {
								"type": "string",
								"enum": [
									"MUST",
									"SHOULD",
									"COULD"
								]
							}
						},
						"additionalProperties": true
					}
				},
				"traceability": {
					"type": "array",
					"items": {
						"type": "object",
						"required": [
							"id",
							"title",
							"derivedfrom",
							"rule",
							"enforcement",
							"priority"
						],
						"properties": {
							"id": {
								"type": "string",
								"pattern": "^REQ-REQ-TRC-\\d{3}$"
							},
							"title": {
								"type": "string"
							},
							"derivedfrom": {
								"type": "array",
								"minItems": 1,
								"items": {
									"type": "string"
								}
							},
							"rule": {
								"type": "string"
							},
							"enforcement": {
								"type": "string",
								"enum": [
									"CI gate",
									"warning",
									"manual"
								]
							},
							"priority": {
								"type": "string",
								"enum": [
									"MUST",
									"SHOULD",
									"COULD"
								]
							}
						},
						"additionalProperties": true
					}
				}
			},
			"additionalProperties": true
		}
	},
	"additionalProperties": true
}